{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "experimentalAsyncFunctions": true,
    "externalTranspiler": "babel",
    "module": "amd",
    "sortOutput": true,
    "newLine": "CRLF"
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "bower_components"
  ]
}